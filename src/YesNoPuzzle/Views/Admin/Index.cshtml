@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model ICollection<Game>

@if(Model != null){
          @if (Model.Count == 1)
   {<h1>There is @Model.Count game.</h1>}
   else if (Model.Count > 1)
   { <h1>There are @Model.Count games.</h1>}
   else
   { <h1>There are no games.</h1>}
    <br/>

        foreach (var g in Model)
        {
            <div style="display: inline">               
                    <h4 class="col-lg-4"><a href="/player/Game/@g.Id">@g.GameName</a></h4>
                    
                <a href="/Admin/EditGame/@g.Id" class="btn btn-info" role="button">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>
                <a href="/Admin/DeleteGame/@g.Id" class="btn btn-danger" role="button">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>

                <hr/>
            </div>
    }
    <br/>
    <a href="/Admin/ShowAllGames" class="btn btn-info" role="button">Show all games</a>
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        window.scrollTo(0, document.body.scrollHeight);
    });
</script>